package com.experion.utility;
import java.util.ArrayList;
import java.util.Scanner;

import com.experion.entity.Product;
import com.experion.service.Service;

public class ProductUtility {

	public static void main(String[] args) {
		char mainChoice;
		int index=0;
		int choice;
		Scanner scanner =new Scanner(System.in);
		//Product productList[]=new Product[3];
		ArrayList<Product>productList=new ArrayList<Product>();
		do {
			
		System.out.println("1.create product 2.Display Product");
		int choice1 = scanner.nextInt();
		switch(choice1) 
		{
			case 1:productList.add(Service.createProduct());
			       index++;
			       break;
			case 2:Service.displayProductDetails(productList);
			break;
		
		}
		System.out.println("Do yo want to continue(y/n): ");
		mainChoice=scanner.next().charAt(0);
	}while(mainChoice == 'y');
	System.out.println("enter your seral No");
	choice=scanner.nextInt();
	Service.displayProductDetails(productList,choice);
	
	
		
		
	}
		

}
